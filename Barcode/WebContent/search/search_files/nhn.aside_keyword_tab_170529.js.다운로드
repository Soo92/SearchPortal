nhn.AsideKeywordTab=$Class({$init:function(t){this._setElement(t),this._attachEvent(t),this._nCurrentIndex=0},select:function(t){this._nCurrentIndex;this._aTabArea.length>t&&this._aTabArea.length>t&&($ElementList(this._aTab).removeClass("selected"),$ElementList(this._aTabArea).hide(),$Element(this._aTab[t]).addClass("selected"),$Element(this._aTabArea[t]).show(),this._nCurrentIndex=t)},_setElement:function(t){this._el=t,this._aTab=$$("._tab li",t),this._aTabArea=$$("._tab_area",t),this._nCurrentIndex=parseInt($Element($$.getSingle("._tab li.selected",t)).attr("data-index"),10)},_attachEvent:function(t){$Fn(this._onClickTab,this).attach(this._aTab,"click")},_onClickTab:function(t){var e=t.currentElement,a=parseInt(e.getAttribute("data-index"));this.select(a)}});